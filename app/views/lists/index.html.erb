<div class="container">
  <h3 class="pt-3">My Lists</h3>

  <div class="d-flex p-2 bd-highlight flex-wrap">
  <% x = 0 %>
    <% @lists.each do |list| %>
      <% x += 1 %>
      <%= link_to list_path(list), class:"text-decoration-none" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://picsum.photos/200/300?random=<%= x %>)">
          <%= list.name %>
        </div>
      <% end %>
    <% end %>

      <%= link_to new_list_path, class:"text-decoration-none" do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.8)), url(http://store-images.s-microsoft.com/image/apps.63088.13510798884779018.d0c94606-a2ef-48fe-8108-3fcbd44671ea.4aa24fdf-e4f2-4f8f-a66d-d7c183f005b3)">
          <i class="fa-solid fa-plus"></i>
        </div>
      <% end %>
  </div>
</div>