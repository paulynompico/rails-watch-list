<div class="container">
  <div class="d-flex p-3 bd-highlight">
    <h3 class="flex-fill"><%= @list.name %></h3>
    <p><%= link_to "Add a Movie", new_list_bookmark_path(@list), style:"background-color: teal; color:white;", class:"btn me-2 bt" %></p>
    <p><%= link_to "Delete List", list_path(@list), class:"btn", style:"background-color: teal; color:white;", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
  </div>

  <div class="d-flex bd-highlight flex-wrap">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card text-center p-2 m-3 bd-highlight" style="width: 12rem;">
        <img src=<%=bookmark.movie.poster_url%> alt="movie poster" class="card-img-top">
        <div class="card-body">
          <p class="card-title fw-bold"><%= link_to bookmark.movie.title, movie_path(bookmark.movie), class:"text-decoration-none" %></p>
          <p>Note: <%= bookmark.comment %></p>
          <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"text-decoration-none" %>
        </div>
      </div>
    <% end %>
  </div>
</div>