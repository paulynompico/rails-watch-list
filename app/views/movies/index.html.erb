<h1>Movie List</h1>

<div class="d-flex p-2 bd-highlight flex-wrap">
  <% @movies.each do |movie| %>
    <div class="card text-center p-2 m-3 bd-highlight" style="width: 12rem;">
      <img src=<%=movie.poster_url%> alt="movie poster" class="card-img-top">
      <div class="card-body">
        <p class="card-title"><%= movie.title %></p>
      </div>
    </div>
  <% end %>
</div>